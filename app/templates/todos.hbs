<section id="todoapp">
  <header id="header">
    <h1>todos</h1>
    {{input id="new-todo" placeholder="What needs to be done?" value=newTitle action="createTodo"}}
  </header>
  {{#if length}}
    <section id="main">
      <ul id="todo-list">
        {{partial 'list_todos'}}
      </ul>
      {{input type="checkbox" id="toggle-all" checked=allAreDone}}
    </section>

    {{partial 'footer'}}
  {{/if}}
</section>

{{partial 'footer_info'}}
